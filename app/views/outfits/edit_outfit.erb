<h1>Edit/Update Specific Outfit</h1>

<form action="/outfits/<%= @outfit.slug %>" method="POST">
  Outfit Name : <input type="text" id="name" name="name" value="<%= @outfit.name %>"><br>
  Outfit Type : <input type="text" id="outfit_type" name="outfit_type" value="<%= @outfit.outfit_type %>"><br>
  <br>
  <input type="submit" id="submit" value="Edit/Update Outfit">
</form>

<form action="/outfits/<%= @outfit.slug %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Outfit">
</form>
